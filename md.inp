
&FORCE_EVAL
  METHOD Quickstep
  &DFT
      &SCF
	#CHOLESKY OFF
      SCF_GUESS RESTART
      EPS_SCF 3.0E-6
      MAX_SCF 200
      &OUTER_SCF
         EPS_SCF 3.0E-5
      &END OUTER_SCF
      &OT T
         MINIMIZER CG
         PRECONDITIONER FULL_ALL
         ENERGY_GAP 0.500	# make larger if poor initial guess on the preconditioner
      &END OT
    &END SCF
 	BASIS_SET_FILE_NAME /home/eshamay/share/cp2k/tests/QS/GTH_BASIS_SETS
	POTENTIAL_FILE_NAME /home/eshamay/share/cp2k/tests/QS/POTENTIAL
	&LOCALIZE
	  METHOD JACOBI
	&END LOCALIZE
	&PRINT
	  &LOCALIZATION
		&WANNIER_CENTERS
		  #SECTION_PARAMETERS SILENT
		  FILENAME ./WANNIERS
		  COMMON_ITERATION_LEVELS 1
		  FORMAT XYZ
		&END WANNIER_CENTERS
		&TOTAL_DIPOLE
		  #SECTION_PARAMETERS SILENT
		  COMMON_ITERATION_LEVELS 1
		  FILENAME ./TOTAL_DIPOLE
		&END TOTAL_DIPOLE
	  &END LOCALIZATION
	&END PRINT
  &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
  &END XC
  &END DFT
  &SUBSYS
	&CELL
		ABC	20. 20. 20.
		PERIODIC NONE
	&END CELL
    &KIND H
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q1
	  MASS 1.0
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &KIND S
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT_NAME so2-cluster-md-10
  RUN_TYPE MD
  PRINT_LEVEL LOW
  PREFERRED_FFT_LIBRARY FFTW
&END GLOBAL
&MOTION
  &MD
    ENSEMBLE NVT
    STEPS 30000
    TIMESTEP 1.0
    TEMPERATURE 250.0
	&THERMOSTAT
     &NOSE
        LENGTH 3
        YOSHIDA 3
        TIMECON 1000.0
        MTS 2
      &END NOSE
    &END THERMOSTAT
  &END MD
&END MOTION
